pipeline {
    agent any
    environment {
        NODE_VERSION = '18'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Instalando dependencias...'
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Ejecutando pruebas...'
                    sh 'npm run test'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo 'Desplegando aplicación...'
                    sh 'npm run start &'
                }
            }
        }
    }
    post {
        success {
            echo '✅ Pipeline completado con éxito'
        }
        failure {
            echo '❌ El pipeline ha fallado'
        }
    }
}
