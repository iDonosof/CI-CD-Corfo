pipeline {
    agent any
    environment {
        NODE_VERSION = '22'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    try {
                        echo 'Instalando dependencias...'
                        sh 'npm install'
                    } catch (Exception e) {
                        error('❌ Error en la etapa de Build')
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    try {
                        echo 'Ejecutando pruebas...'
                        sh 'npm run test'
                    } catch (Exception e) {
                        error('❌ Error en la etapa de Test')
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    try {
                        echo 'Desplegando aplicación...'
                        sh 'npm run start'
                    } catch (Exception e) {
                        error('❌ Error en la etapa de Deploy')
                    }
                }
            }
        }
    }
    post {
        success {
            echo '✅ Pipeline completado con éxito'
        }
        failure {
            echo '❌ El pipeline ha fallado'
        }
    }
}
